{
  "name": "express-typescript-starter",
  "version": "1.0.0",
  "description": "It is typescript based express api project.",
  "main": "dist/app.js",
  "repository": "https://github.com/fullstack-universe/express-typescript-starter.git",
  "author": "Adarsh Ranjan",
  "license": "MIT",
  "scripts": {
    "start": "node dist/app.js",
